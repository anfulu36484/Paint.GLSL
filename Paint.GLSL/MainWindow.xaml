<Window x:Class="Paint.GLSL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint.GLSL"
        mc:Ignorable="d"
        Title="Paint.GLSL" Height="400" Width="250" Loaded="OnLoaded" Left="0" Top="0" Topmost="True">
    <Grid>
        <StackPanel>
            <Button Name="CreateNewWindowButton" Margin="10,10,10,10" Click="CreateNewWindowButton_Click" >Create new window</Button>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Name="UndoImage" Source="Resources/undo.png" Width="50" Height="30" />
                <Image Name="RendoImage" Source="Resources/rendo.png" Width="50" Height="30"></Image>
            </StackPanel>
            
            
            <Label Content="Brushes" Margin="10,0"/>
            <ComboBox x:Name="BrushesComboBox" Margin="10,0,10,10" />
            <StackPanel Orientation="Horizontal">
                <Label  Content="Size" Margin="10,0,0,10"/>
                <TextBox x:Name="SizeTextBox" Margin="10,0,10,10" Height="22" TextWrapping="Wrap" Text="10" 
                         TextChanged="OnSizeChanged" Width="56"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <Label  Content="Color" Margin="10,0,10,10"/>
                <Label  Content="R" Margin="0,0,0,10"/>
                <TextBox x:Name="ColorTextBoxRed" Margin="0,0,0,10" Height="22" TextWrapping="Wrap" Text="120" Width="30" TextChanged="OnColorChanged" />
                <Label  Content="G" Margin="0,0,0,10"/>
                <TextBox x:Name="ColorTextBoxGreen" Margin="0,0,0,10" Height="23" TextWrapping="Wrap" Text="120" Width="30" TextChanged="OnColorChanged"/>
                <Label  Content="B" Margin="0,0,0,10"/>
                <TextBox x:Name="ColorTextBoxBlue" Margin="0,0,10,10" Height="23" TextWrapping="Wrap" Text="120" Width="30" TextChanged="OnColorChanged"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
