<Window x:Class="Paint.GLSL.SizeDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint.GLSL"
        mc:Ignorable="d"
        Title="Size Of window" Height="150" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <Label Width="45">Width</Label>
                <TextBox Name="WidthTextBox" Width="100"></TextBox>
            </StackPanel>
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <Label Width="45">Height</Label>
                <TextBox Name="HeightTextBox" Width="100"></TextBox>
            </StackPanel>
            <Button Name="OkButton" Margin="0,20,0,0" Width="100" >OK</Button>
        </StackPanel>
    </Grid>
</Window>
